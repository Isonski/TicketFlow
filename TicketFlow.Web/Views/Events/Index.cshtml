@model IEnumerable<TicketFlow.Data.Models.Event>

<h2>Събития</h2>
<table class="table">
    <thead> <tr>
            <th>Име</th>
            <th>Дата</th>
            <th>Място</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
           <tr> <td>@item.Name</td> <td>@item.Date</td> <td>@item.Location</td> <td> 
               <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> | <a asp-action="Delete" asp-route-id="@item.Id">Delete</a> </td> </tr>
        }
    </tbody>
</table>
<a asp-action="Create" class="btn btn-primary">Добави събитие</a>